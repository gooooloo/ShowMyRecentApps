<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/entry_height"
    android:layout_gravity="center"
    android:background="@drawable/touchfeedback"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/entry_image_width"
        android:layout_height="@dimen/entry_image_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/entry_image_margin_left"
        android:layout_marginRight="@dimen/entry_image_margin_right"
        android:layout_marginTop="@dimen/entry_image_margin_top"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@android:drawable/stat_notify_sync"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/editText1"
        android:layout_width="@dimen/entry_label_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="@dimen/entry_label_text_size" >
    </TextView>

    <TextView
        android:id="@+id/editText2"
        android:layout_width="@dimen/entry_count_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/entry_margin_bottom"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/entry_count_text_size" >
    </TextView>

</LinearLayout>